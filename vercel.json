{
  "version": 2,
  "build": {
    "env": {
      "BUILDING_FOR_NOW": "true"
    }
  },
  "builds": [
    { "src": "buy/package.json", "use": "@now/next" },
    { "src": "magazine/package.json", "use": "@now/next" },
    { "src": "home/package.json", "use": "@now/next" }
  ],
  "rewrites": [
    { "source": "/magazine(.*)", "destination": "/magazine/" },
    { "source": "/buy(.*)", "destination": "/buy/" },
    { "source": "/home(.*)", "destination": "/home/" }
  ]
}
